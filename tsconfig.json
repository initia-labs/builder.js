{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "paths": {
      "lib": ["lib/index"],
      "types": ["types/index"],
      "*": ["*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules","test"]
}