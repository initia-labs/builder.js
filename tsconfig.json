{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": "src",
    "sourceRoot": "src",
    "outDir": "dist",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  }
}